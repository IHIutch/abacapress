<footer role="footer" class="container mx-auto mb-20 mt-64 px-4">
    <div class="flex -m-4">
        <div class="px-4 flex-1">
            <div class="flex flex-col justify-between h-full">
                <span class="text-3xl">{{site.name}}</span>
                <span class="font-sm">
                    All Rights Reserved
                    <span class="font-sans">&copy;</span>
                    {{"now"|date("Y")}}
                </span>
            </div>
        </div>
        <div class="flex px-4">
            <div class="mr-20">
                <div class="mb-8">
                    <div class="flex mb-2">
                        <span class="uppercase font-barlow-condensed font-semibold tracking-widest text-red">
                            Email
                        </span>
                    </div>
                    <span>{{options.email}}</span>
                </div>
                <div>
                    <div class="flex mb-2">
                        <span class="uppercase font-barlow-condensed font-semibold tracking-widest text-red">
                            Phone
                        </span>
                    </div>
                    <span>{{options.phone_number}}</span>
                </div>
            </div>
            <div class="mr-20">
                <div class="flex mb-2">
                    <span class="uppercase font-barlow-condensed font-semibold tracking-widest text-red">
                        Address
                    </span>
                </div>
                <p>
                    {{options.address}}
                </p>
            </div>
            <div>
                <div class="flex mb-2">
                    <span class="uppercase font-barlow-condensed font-semibold tracking-widest text-red">
                        Find Us Online
                    </span>
                </div>
                <div>
                    <a href="{{options.facebook_link}}" class="flex align-center mb-6">
                        <i data-feather="facebook"></i>
                        <span class="ml-3">Facebook</span>
                    </a>
                    <a href="{{options.instagram_link}}" class="flex align-center">
                        <i data-feather="instagram"></i>
                        <span class="ml-3">Instagram</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</footer>