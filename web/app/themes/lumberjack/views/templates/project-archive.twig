{% extends "base.twig" %}

{% block content %}
<main class="container mx-auto" role="main">
    <div class="flex -mx-4">
        <div class="mb-4 w-1/3 px-4">
            <span class="text-4xl">See all these beautiful projects</span>
        </div>
        {% for project in projects %}
        <div class="mb-4 w-1/3 px-4">
            <span class="uppercase">{{project.post_date | date("F d, Y") }}</span>
            <div>
                <span class="text-4xl">{{project.post_title}}</span>
                <p>
                    Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore
                    et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud
                </p>
            </div>
            <div><a class="text-blue-500" href="{{project.link}}">Keep Reading</a></div>
        </div>
        {% endfor %}
    </div>
</main>
{% endblock %}