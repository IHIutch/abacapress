{% extends "base.twig" %}

{% block content %}
<main class="container mx-auto px-4" role="main">
    <div class="flex -mx-4 flex-wrap mb-32">
        <div class="px-4 w-full lg:w-8/12 mx-auto">
            <img class="w-full" src="{{image.url}}" {% if image.alt %} alt="{{image.alt}}" {% endif %}>
        </div>
    </div>
    <div class="flex -mx-4 flex-wrap">
        <div class="px-4 w-full">

        </div>
        <div class="px-4 w-full order-2 md:order-none md:w-1/2 lg:ml-auto lg:w-7/12 mr-auto xl:mx-auto xl:w-5/12">
            <div class="mb-8">
                <h1 class="text-5xl leading-tight font-gotu">
                    {{headline}}
                </h1>
            </div>
            <div>
                {% filter shortcodes %}
                {{form_shortcode}}
                {% endfilter %}
            </div>
        </div>
        <div class="px-4 w-full order-1 mb-56 md:mb-0 md:order-none md:ml-auto md:w-5/12 lg:w-4/12">
            <div class="flex flex-wrap">
                <div class="w-1/2 md:w-full mb-8">
                    <div class="flex mb-2">
                        <span class="uppercase font-barlow-condensed font-semibold tracking-widest text-red">
                            Email
                        </span>
                    </div>
                    <span>{{options.email}}</span>
                </div>
                <div class="w-1/2 md:w-full mb-8">
                    <div class="flex mb-2">
                        <span class="uppercase font-barlow-condensed font-semibold tracking-widest text-red">
                            Phone
                        </span>
                    </div>
                    <span>{{options.phone_number}}</span>
                </div>
                <div class="w-full mb-14">
                    <div class="flex mb-2">
                        <span class="uppercase font-barlow-condensed font-semibold tracking-widest text-red">
                            Find Us Online
                        </span>
                    </div>
                    <div class="flex md:block lg:flex">
                        <a href="{{options.facebook_link}}" class="flex align-center mb-6">
                            <i data-feather="facebook"></i>
                            <span class="ml-3">Facebook</span>
                        </a>
                        <a href="{{options.instagram_link}}" class="flex align-center ml-14 md:ml-0 lg:ml-14">
                            <i data-feather="instagram"></i>
                            <span class="ml-3">Instagram</span>
                        </a>
                    </div>
                </div>
                <div class="w-full">
                    <div class="relative pb-2/3 border-red border-2 mb-6">
                        <div class="absolute w-full h-full p-1">
                            <div id="googleMap" class="w-full h-full bg-gray-500"></div>
                        </div>
                    </div>
                    <div>
                        <div class="flex mb-2">
                            <span class="uppercase font-barlow-condensed font-semibold tracking-widest text-red">
                                Address
                            </span>
                        </div>
                        <p>
                            {{options.address}}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<script>
    function initMap() {
        var location = {
            lat: 42.919770,
            lng: -78.898200
        };
        var map = new google.maps.Map(
            document.getElementById('googleMap'), {
                zoom: 15,
                center: location,
                disableDefaultUI: true,
                styles: [{
                    featureType: 'poi',
                    elementType: 'all',
                    stylers: [{
                        visibility: 'off'
                    }]
                }]
            });
        var marker = new google.maps.Marker({
            position: location,
            map: map,
        });
    }
</script>
<script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDmpvIeO8vroUyF23MPOqWA9mMWORSoq98&callback=initMap">
</script>

{% endblock %}